@model kredit.ViewModels.PermohonanVM

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdminPanel.cshtml";
}

<div class="row page-titles">
    <div class="col-md-6 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">@ViewBag.Title</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">@ViewBag.Title</a></li>
            <li class="breadcrumb-item active">Data Permohonan</li>
        </ol>
    </div>
    <div class="col-md-6 col-4 align-self-center">

    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("Create", "Permohonans", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group row">
                            <label class="control-label col-md-2">Scan KTP</label>
                            <div class="col-md-10">
                                <input type="file" class="form-control" id="FeaturedImage" name="Ktpimg" />
                                @Html.ValidationMessageFor(model => model.Ktpimg, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="control-label col-md-2">Scan KK</label>
                            <div class="col-md-10">
                                <input type="file" class="form-control" id="FeaturedImage" name="Kkimg" />
                                @Html.ValidationMessageFor(model => model.Kkimg, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="control-label col-md-2"> Surat Keterangan Kerja</label>
                            <div class="col-md-10">
                                <input type="file" class="form-control" id="FeaturedImage" name="Skkerjaimg" />
                                @Html.ValidationMessageFor(model => model.Skkerjaimg, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="control-label col-md-2">Scan Tagihan Listrik</label>
                            <div class="col-md-10">
                                <input type="file" class="form-control" id="FeaturedImage" name="Tagihanlistrikimg" />
                                @Html.ValidationMessageFor(model => model.Tagihanlistrikimg, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Tambah" class="btn btn-info" />
                                @Html.ActionLink("Kembali", "Index", null, new { @class = "btn btn-secondary" })
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>