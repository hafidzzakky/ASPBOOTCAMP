@model kredit.ViewModels.UnitVm

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdminPanel.cshtml";
}

<div class="row page-titles">
    <div class="col-md-6 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">Kelola Unit</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Unit</a></li>
            <li class="breadcrumb-item active">Tambah Unit</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group row">
                            <label class="control-label col-md-2"> Nama Barang</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Namabarang, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Namabarang, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="control-label col-md-2"> Merk</label>
                            <div class="col-md-10">
                                <select class="form-control select2" style="width: 100%" id="categories" name="Category">
                                    <option value="">--Pilih--</option>
                                    @foreach (var item in ViewBag.Category)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                                @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="control-label col-md-2"> Harga</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Harga, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Harga, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="control-label col-md-2"> Stok</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Stok, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Stok, "", new { @class = "text-danger" })
                            </div>
                        </div>
 
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Tambah" class="btn btn-info" />
                                @Html.ActionLink("Kembali", "Index", null, new { @class = "btn btn-secondary" })
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section styles
{
    <link href="~/assets/plugins/select2/dist/css/select2.min.css" rel="stylesheet" type="text/css" />
}
@section scripts
{
    <script src="~/assets/plugins/select2/dist/js/select2.full.min.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            // For select 2
            $("#categories").select2();
        });
    </script>    
}
