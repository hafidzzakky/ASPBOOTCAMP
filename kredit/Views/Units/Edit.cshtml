@model kredit.ViewModels.UnitVm

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdminPanel.cshtml";
}

<div class="row page-titles">
    <div class="col-md-6 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">Kelola Unit</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Unit</a></li>
            <li class="breadcrumb-item active">Edit Unit</li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Idunit)

                        <div class="form-group row">
                            <label class="control-label col-md-2"> Nama Barang</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Namabarang, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Namabarang, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-2">
                                <label>Merk</label>
                            </div>
                            <div class="col-md-10">
                                <select class="select2 m-b-10" style="width: 100%" id="Categories" name="Category" data-placeholder="Choose">
                                    @{
                                        foreach (var i in ViewBag.Category)
                                        {
                                            if (i.Selected)
                                            {
                                                <option value="@i.Value" selected>@i.Text</option>
                                            }
                                            else
                                            {
                                                <option value="@i.Value">@i.Text</option>
                                            }
                                        }
                                    }
                                </select>
                                @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="control-label col-md-2"> Harga</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Harga, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Harga, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="control-label col-md-2"> Stok</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Stok, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Stok, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Simpan" class="btn btn-info" />
                                @Html.ActionLink("Kembali", "Index", null, new { @class = "btn btn-secondary" })
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>